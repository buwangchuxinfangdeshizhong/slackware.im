{% extends "SlackissSlackwareBundle:layout:layout.html.twig" %}

{% block title %}{{member.name}}{% endblock %}
{% block header %}
{% if member.css %}
<style>
{{member.css}}
</style>
{% endif %}
{% endblock %}

{% block body %}
<div class="row-fluid">
  <div class="span6 offset3 slacker">
    <div>
    <img class="thumbnail" src="{{vich_uploader_asset(member,'image')|imagine_filter('slacker_image')}}"/>
    </div>
    <div class="slacker-info">
      <table class="table">
        <tr>
          <td>ID</td>
          <td>{{member.name}}</td>
        </tr>
        <tr>
          <td>座标</td>
          <td>{{member.city}}</td>
        </tr>
        {% if member.website %}
        <tr>
          <td>
            站点
          </td>
          <td>
            <a href="{{member.website}}" target="_blank">{{member.website}}</a>
        </tr>
        {% endif %}

        {% if member.github %}
        <tr>
          <td>
            Github
          </td>
          <td>
          <a href="{{member.github}}" target="_blank">{{member.github}}</a>
          </td>
        </tr>
        {% endif %}

        {% if member.twitter %}
        <tr>
          <td>Twitter</td>
          <td><a href="{{member.twitter}}" target="_blank">{{member.twitter}}</a></td>
        </tr>
        {% endif %}

        {% if member.googleplus %}
        <tr>
          <td>Google+</td>
          <td>
            <a href="{{member.googleplus}}" target="_blank">{{member.googleplus}}</a>
          </td>
        </tr>
        {% endif %}

        {% if member.facebook %}
        <tr>
          <td>Facebook</td>
          <td>
            <a href="{{member.facebook}}" target="_blank">Facebook</a>
          </td>
        </tr>
        {% endif %}

        {% if member.weibo %}
        <tr>
          <td>微博</td>
          <td>
            <a href="{{member.weibo}}" target="_blank">新浪微博</a>
          </td>
        </tr>
        {% endif %}
        <tr>
          <td colspan="2">
            {{member.description|nl2br}}
          </td>
        </tr>
        <tr>
          <td colspan="2">


            <a href="{{app.request.scheme}}://{{app.request.httpHost ~ app.request.basePath ~ path('slacker_show',{id:member.id})}}" target="_blank" title="Slacker: {{member.name}}">
              {{app.request.scheme}}://{{app.request.httpHost ~ app.request.basePath ~ path('slacker_show',{id:member.id})}}
            </a>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
{% endblock %}
